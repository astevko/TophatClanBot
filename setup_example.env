# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
GUILD_ID=your_discord_server_id_here

# Admin Channel Configuration (optional - can set via /set-admin-channel)
ADMIN_CHANNEL_ID=your_admin_channel_id_here

# Roblox Configuration
ROBLOX_GROUP_ID=your_roblox_group_id_here
ROBLOX_API_KEY=your_roblox_api_key_here
# Alternative: Use cookie authentication if API key is not available
# ROBLOX_COOKIE=your_roblox_cookie_here

# Role Configuration (Names)
# Customize these to match your Discord server's role names
ADMIN_ROLE_NAME=Admin
MODERATOR_ROLE_NAME=Moderator
OFFICER_ROLE_NAME=Officer
ELITE_ROLE_NAME=Elite
MEMBER_ROLE_NAME=Member

# Role Configuration (IDs) - More reliable than names!
# To get role IDs: Server Settings > Roles > Right-click role > Copy ID
# (You need Developer Mode enabled in Discord Settings)
# Leave blank to use role names only
ADMIN_ROLE_ID=
MODERATOR_ROLE_ID=
OFFICER_ROLE_ID=
ELITE_ROLE_ID=
MEMBER_ROLE_ID=

# Admin User IDs - Whitelist specific Discord users (comma-separated)
# To get your Discord ID: Enable Developer Mode, right-click your name, "Copy User ID"
# Example: ADMIN_USER_IDS=123456789012345678,987654321098765432
ADMIN_USER_IDS=

# Logging Configuration (optional)
# Set logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO (recommended for production)
# Use DEBUG for development/troubleshooting
LOG_LEVEL=INFO

# Rate Limiting Configuration (optional)
# Maximum number of retry attempts when Discord API rate limits are hit
# Default: 3 retries
MAX_RATE_LIMIT_RETRIES=3

# Initial delay (in seconds) before retrying a rate-limited request
# Uses exponential backoff (1s, 2s, 4s, 8s, etc.)
# Default: 1.0 seconds
RATE_LIMIT_RETRY_DELAY=1.0

# Database Configuration
# For PostgreSQL (Railway, Render, etc.)
# DATABASE_URL=postgresql://user:password@host:port/database

# For Oracle Autonomous Database
# ORACLE_USER=your_oracle_username
# ORACLE_PASSWORD=your_oracle_password
# ORACLE_DSN=(description=(retry_count=20)(retry_delay=3)(address=(protocol=tcps)(port=1522)(host=adb.us-chicago-1.oraclecloud.com))(connect_data=(service_name=your_service_name))(security=(ssl_server_dn_match=yes)))
# For wallet-based authentication
# ORACLE_CONFIG_DIR=/path/to/wallet/directory
# For Python 3.13+ with PEM wallet
# ORACLE_WALLET_LOCATION=/path/to/ewallet.pem
# ORACLE_WALLET_PASSWORD=your_wallet_password

